def get_book_text(book_1):
    with open(book_1) as f:
        file_contents = f.read()
    return file_contents

def word_count(book_1):
    words = book_1.split()
    return len(words)

def main():
    words = 0
    path = get_book_text("books/frankenstein.txt")
    words = word_count(path)
    print(f"Found {words} total words")

main()
